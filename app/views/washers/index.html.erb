<% provide(:title, "SmartWash") %>

<h1>Welcome to Smart Washing System</h1>

<div class="row">
	<div class="col-md-6">
		<div class="table-washers">
			<table class="table table-hover table-responsive table-striped">
				<caption>Washer Channels</caption>
				<thead>
					<tr>
						<tr>
							<th>CHANNEL</th>
							<th>START </th>
							<th>INTERVEL </th>
							<th>START/STOP</th> 
						</tr>
					</tr>
				</thead>
				<tbody>
					<tr>
					  <% @washers.each do |washer| %>
						<%= render washer %>
					  <% end %>
					</tr>
				</tbody>
			</table>

	  		<div>
	  			<%= time_tag(Time.now) %>
	  		</div>

			<%= link_to "Create Schedule", new_washer_path, class: "btn btn-md btn-primary" %>
		</div>
	</div>
</div>