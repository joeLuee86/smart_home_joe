<% provide(:title, "SmartWash") %>

<h1>Welcome to Smart Washing System</h1>

<div class="row">
	<div class="col-md-6 col-sm-6">
	  <%= image_tag "washing.jpg" %>
	</div>
	<div class="col-md-6">
		<h2>Schedule List</h2>
		<ul class="smart_wash">
		  <% @washers.each do |washer| %>
			<%= render washer %>
		  <% end %>
		</ul>	

  		<div class="row">
			<div class="col-md-3">Current Time:</div>
			<div class="col-md-6"><%= Time.now %></div>
		</div>

		<%= link_to "Create Schedule", new_washer_path, class: "btn btn-md btn-primary" %>
	</div>
</div>