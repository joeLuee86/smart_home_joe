<% provide(:title, "SmartWash") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@washer) do |f| %>
      <%= render 'shared/error_msg_washer' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :channel %>
      <%= f.select :channel, options_for_select(["Channel 1", "Channel 2", "Channel 3"]), class: 'form-control' %>

      <div class="row">
        <div class="col-md-4"><%= f.label :start_at, 'Start_At' %></div>
        <div class="col-md-8"><%= f.time_select :start_at, class: 'time-select' %></div>
      </div>   

      <%= f.label :interval %>
      <div class="input-group bootstrap-timepicker timepicker">
        <input id="timepicker1" type="text" class="form-control input-small">
        <span class="input-group-addon"><i class="glyphicon glyphicon-time"></span>
      </div>
<!--       <%= f.date_select :intervel, class: 'time-select' %> -->

      <%= f.label :start_stop, 'Start_Stop' %>
      <%= f.select :start_stop, options_for_select(["Stop", "Start"]), class: 'form-control' %>

      <%= f.submit "Create Schedule", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>